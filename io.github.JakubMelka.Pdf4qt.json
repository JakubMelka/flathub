{
    "app-id": "io.github.JakubMelka.Pdf4qt",
    "runtime": "org.kde.Sdk",
    "runtime-version": "6.5",
    "sdk": "org.kde.Sdk",
    "command": "Pdf4QtViewerProfi",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=ipc"
    ],
    "cleanup": [
        "/pdf4qt",
        "/vcpkg"
    ],
    "modules": [ 
        {
            "name": "pdf4qt",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "echo 'Finishing BUILD - move plugins into right place'",
                "./postbuild.sh"
            ],
            "config-opts": [
                "-S /run/build/pdf4qt",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DPDF4QT_INSTALL_QT_DEPENDENCIES=0",
                "-DCMAKE_TOOLCHAIN_FILE=/run/build/pdf4qt/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "-DCMAKE_INSTALL_PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/JakubMelka/flathub/releases/download/v1/pdf4qt_vcpkg_loc.zip",
                    "sha256": "0c9cc9ca7fd5bd322227e8b5a8935213837393fbb7f13253da18bae71591952f",
                    "dest": "vcpkg"
                },
                {
                    "type": "git",
                    "url": "https://github.com/JakubMelka/PDF4QT.git",
                    "tag": "flatpakv2",
                    "commit": "f8455d5ea400cae8eec566bc6a8cd65ff2099ac9"
                },
                {
                    "type": "file",
                    "path": "postbuild.sh"
                }
            ]
        }
    ]
}

